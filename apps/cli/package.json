{
  "name": "@simple.mail/smc",
  "version": "1.0.0",
  "description": "The simple.mail CLI client, smc, which enables sending emails using the terminal",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "build": "bun build main.ts --compile --outfile dist/smc",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "packageManager": "pnpm@10.28.2",
  "dependencies": {
    "@simple.mail/tui": "workspace:*",
    "commander": "^14.0.3"
  },
  "devDependencies": {
    "@simple.mail/eslint-config": "workspace:*",
    "@simple.mail/typescript-config": "workspace:*",
    "@simple.mail/vitest-config": "workspace:*",
    "vitest": "catalog:"
  }
}
