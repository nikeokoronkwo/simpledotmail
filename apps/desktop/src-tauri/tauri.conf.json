{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop",
  "version": "0.1.0",
  "identifier": "com.nuge.simpledotmail",
  "build": {
    "beforeDevCommand": "cd ../mobile && pnpm web",
    "devUrl": "http://localhost:8082",
    "beforeBuildCommand": "cd ../mobile && pnpm build",
    "frontendDist": "../../.expo/dist"
  },
  "app": {
    "windows": [
      {
        "title": "desktop",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
